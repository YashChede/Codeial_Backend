<header id="main1">
  
    <div id="logo">
      <img src="/images/images.png" id="logoi">
    </div>
    <div id="options">
      <% if(locals.user) { %>
        <div id="name" class="textdec">
          <a href="/users/profile/<%= user.id %>">  <%= user.name %>
            </a>
        </div>
        <div id="signout" class="textdec">
          <a href="/users/signout">
            SIGN OUT
          </a>
        </div>
     <% } else { %>
      <div id="signin" class="textdec">
         <a href="/users/signin">SIGN IN
         </a>
      </div>
      <div id="signup" class="textdec">
        <a href="/users/signup">
          SIGN UP
        </a>
      </div>
     <% } %>
     
    </div>
</header>

